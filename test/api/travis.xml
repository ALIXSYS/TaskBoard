<phpunit>
    <testsuites>
        <testsuite>
            <directory>./</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>../../src/api/controllers</directory>
            <directory>../../src/api/helpers</directory>
        </whitelist>
    </filter>
    <groups>
        <exclude>
            <group>travis-exclude</group>
        </exclude>
    </groups>
    <logging>
        <log type="coverage-html" target="../../api-coverage/"
            lowUpperBound="40" highLowerBound="80" />
    </logging>
</phpunit>

